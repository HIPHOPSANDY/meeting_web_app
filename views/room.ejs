   <script src="/socket.io/socket.io.js" defer></script>
   <link rel="stylesheet" href="style.css">
   <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
   <script src="script.js" defer></script>
   <style>
      #video-grid {
         display: flex;
         justify-content: center;
         flex-wrap: wrap;
      }

      video {
         height: 300px;
         width: 400px;
         object-fit: cover;
         padding: 8px;
         -webkit-transform: scaleX(-1);
         transform: scaleX(-1);
      }
   </style>
</head>

<body>
   <div class="container">
      <div class="row">
         <div class="col">
            <div id="video-grid">

            </div>
         </div>
      </div>
      <div class="row">
         <div class="col">

            <div onclick="muteUnmute()" class="main__controls__button main__mute_button custom_audio">
               <i class="fas fa-microphone"></i>
               <!-- <span>Mute</span> -->
            </div>

         </div>
         <div class="col">
            <div onclick="playStop()" class="main__controls__button main__video_button custom_video">
               <i class="fas fa-video"></i>
               <!-- <span>Stop Video</span> -->
            </div>

         </div>

      </div>


   </div>
</body>

</html>